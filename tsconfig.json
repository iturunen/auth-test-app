{
  "extends": "@tsconfig/node17/tsconfig.json",
      "target": "ES2021",
      "module": "commonjs",
      "lib": ["ES2021"],
  "compilerOptions": {
    "outDir": "./build",
    "sourceMap": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": "./",
    "paths" : {
       "ramda/src/*": [
         "node_modules/types-ramda//src/*"
       ]
     }
  },
  "include": [
    "src/**/*.ts",
    "types.d.ts"
  ]
}
