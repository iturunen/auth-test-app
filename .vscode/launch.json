{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeVersion": "17.9.1",
      //"sourceMaps": false,
      "skipFiles": [
        "<node_internals>/**",
       "**/node_modules/**"
      ],
      // TODO: Clean code and use types properly
      //"preLaunchTask": "tsc: build - tsconfig.json",
      "runtimeArgs": [
        "run-script",
        "start:dev"
      ],
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/server.ts",
    }
  ]
}